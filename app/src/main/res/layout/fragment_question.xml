<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/fragment_contener"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_frag_question"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000"></TextView>

<LinearLayout
    android:id="@+id/ln_img"
    android:layout_width="match_parent"
    android:layout_height="128dp">
    <ImageView
        android:id="@+id/img_frg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"></ImageView>

</LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_frag_cauhoi1"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"></TextView>


        <CheckBox
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:id="@+id/cb_frag_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></CheckBox>
    </LinearLayout>

    <LinearLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="0.5dp"></LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_frag_cauhoi2"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"></TextView>


        <CheckBox
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:id="@+id/cb_frag_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></CheckBox>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln3"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/ln_3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_frag_cauhoi3"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"></TextView>

        <CheckBox
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:id="@+id/cb_frag_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></CheckBox>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln4"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/ln_4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_frag_cauhoi4"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"></TextView>

        <CheckBox
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:id="@+id/cb_frag_4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></CheckBox>
    </LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="123"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_cau_tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>


</LinearLayout>