<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false" >
        <size
            android:height="50dp"
            android:width="50dp" />

        <gradient
            android:centerColor="#90fce9"
            android:centerY="0.5"
            android:endColor="#de4cf5"
            android:startColor="#4487f2"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>